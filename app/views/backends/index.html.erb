<h1>Listing backends</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Directory</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @backends.each do |backend| %>
  <tr>
    <td><%= backend.name %></td>
    <td><%= backend.directory %></td>
    <td><%= link_to 'Show', backend %></td>
    <td><%= link_to 'Edit', edit_backend_path(backend) %></td>
    <td><%= link_to 'Destroy', backend, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

